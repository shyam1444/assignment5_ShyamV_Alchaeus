function sendToSheet(data) {
  fetch(scriptURL, {
    method: "POST",
    mode: "no-cors",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify(data)
  }).then(() => {
    alert("Saved to Google Sheet!");
  }).catch(() => {
    alert("Failed to save. Try again.");
  });
}
